<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="IAmYouAre_ToggleButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/i_am_you_are_toggle_button_background</item>
        <item name="android:textColor">@drawable/i_am_you_are_toggle_button_text_color</item>
    </style>

    <style name="IAmYouAre_TextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name = "toolbarTitleStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name= "android:textSize" >30sp</item>
        <item name= "android:textStyle">bold</item>
    </style>

    <style name="RoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="MateDetailInfo_TextViewStyle">
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/black_rounded_text_view</item>
    </style>

    <style name="MateDetailInfo_LayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:baselineAligned">false</item>
    </style>
</resources>
